import java.sql.*;
import java.util.*;

class Student {
    int id;
    String name;

    Student(int id, String name) {
        this.id = id;
        this.name = name;
    }

    public String toString() {
        return id + " " + name;
    }
}

class StudentDAO {
    Connection con;

    StudentDAO() throws Exception {
        con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test", "root", "Simran0$");
    }

    void addStudent(int id, String name) throws Exception {
        PreparedStatement ps = con.prepareStatement("INSERT INTO student VALUES(?,?)");
        ps.setInt(1, id);
        ps.setString(2, name);
        ps.executeUpdate();
    }

    List<Student> getAllStudents() throws Exception {
        List<Student> list = new ArrayList<>();
        Statement st = con.createStatement();
        ResultSet rs = st.executeQuery("SELECT * FROM student");
        while (rs.next()) {
            list.add(new Student(rs.getInt(1), rs.getString(2)));
        }
        return list;
    }
}

class Controller {
    StudentDAO dao = new StudentDAO();

    void addStudent(int id, String name) throws Exception {
        dao.addStudent(id, name);
    }

    List<Student> getAllStudents() throws Exception {
        return dao.getAllStudents();
    }
}

public class Main {
    public static void main(String[] args) throws Exception {
        Controller c = new Controller();
        c.addStudent(1, "Alice");
        c.addStudent(2, "Bob");
        for (Student s : c.getAllStudents()) {
            System.out.println(s);
        }
    }
}
